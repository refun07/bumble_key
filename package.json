{
  "name": "bumblekey-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BumbleKey - Secure Key Sharing Platform",
  "scripts": {
    "dev:web": "pnpm --filter @bumblekey/web dev",
    "dev:mobile": "pnpm --filter @bumblekey/mobile start",
    "dev:backend": "cd packages/backend && php artisan serve",
    "build:web": "pnpm --filter @bumblekey/web build",
    "build:mobile": "pnpm --filter @bumblekey/mobile build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "workspaces": [
    "packages/*",
    "packages/shared/*"
  ],
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
